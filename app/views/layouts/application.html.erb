<!DOCTYPE html>
<html>
  <head>
    <title>Splurty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <div class="col-3">
        <div class="circle">
          <br />
          <br />
            LOGO
        </div>
      </div>
      <div class="col-4 slogan">
        Splurting out weird quotes wowowowoowowow
      </div>
      <div class="col-5 links">
        <%= link_to 'Contribute', '#' %>
        <%= link_to 'About', '#' %>
      </div>
    </header>

    <hr />

    <br class="clear" />

    <div class="container">
      <%= yield %>
    </div>

    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-6">
            <%= link_to "Footer!", "#", class: "next-quote" %>
          </div>
          <div class="col-6 footer-blurb">
            You're a melty <a href="/">Buttercat</a><br />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
